<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#fff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:background="@drawable/tomato"
            android:id="@+id/imgProduk"
            android:layout_width="150dp"
            android:layout_height="120dp"/>
        <TextView
            android:id="@+id/namaProduk"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tomat Merah"
            android:textColor="#333"/>
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Harga mulai dari"
            android:textColor="#7c7c7c"/>
        <TextView
            android:id="@+id/hrgProduk"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rp. 35.000/kg"
            android:textStyle="bold"
            android:textColor="#F34242"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>